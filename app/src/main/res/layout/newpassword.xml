<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Security"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:textSize="40dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Enter new password"
        android:textColor="@color/colorText2"
        android:layout_marginBottom="8.0dip"
        android:id="@+id/textpas"/>

    <EditText
        android:id="@+id/ET_newpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72.0dip"
        android:layout_marginStart="72.0dip"
        android:background="@drawable/et_password_bg2"
        android:gravity="center"
        android:inputType="numberPassword"
        android:padding="8.0dip"
        android:textColor="@color/colorText2"
        android:textDirection="ltr"
        android:textSize="24.0sp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="Enter your Email"
        android:textColor="@color/colorText2"
        android:layout_marginBottom="8.0dip"
        android:id="@+id/textemail"/>

    <EditText
        android:id="@+id/ET_Email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72.0dip"
        android:layout_marginStart="72.0dip"
        android:background="@drawable/et_password_bg2"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:padding="8.0dip"
        android:textColor="@color/colorText2"
        android:textDirection="ltr"
        android:textSize="24.0sp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72.0dip"
        android:layout_marginStart="72.0dip"
        android:padding="8.0dip"
        android:gravity="center"
        android:background="@drawable/button2"
        android:textSize="24.0sp"
        android:layout_marginTop="10dp"
        android:text="Set"
        android:textColor="@color/textcolor2"
        android:id="@+id/set"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="A Password to login to the app \n \n Email when a password forget"
        android:textColor="@color/colorText2"
        android:layout_marginBottom="8.0dip"/>

</LinearLayout>