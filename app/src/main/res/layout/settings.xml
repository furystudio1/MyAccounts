<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/backtop"
            android:src="@drawable/adspro"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/nav_arrow_back"
            android:padding="12dp"
            android:id="@+id/back"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary2"
            android:text="Settings"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/back"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_below="@+id/top"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/email"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_margin="10dp"
            android:textColor="@color/colorstatus2"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:id="@+id/text_email"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary2"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:background="@drawable/et_password_bg5"
            android:layout_toRightOf="@+id/text_email"
            android:id="@+id/text_edit_email"
            android:text="furystudio1@gmail.com"
            android:padding="10dp"
            android:gravity="center"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/h1"
        android:layout_below="@+id/email"
        android:scaleType="fitXY"
        android:src="@drawable/adspro"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/h1"
        android:id="@+id/pass"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_margin="10dp"
            android:textColor="@color/colorstatus2"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:id="@+id/text_pass"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary2"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:background="@drawable/et_password_bg5"
            android:layout_toRightOf="@+id/text_pass"
            android:id="@+id/text_edit_pass"
            android:text="SET"
            android:padding="10dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/switch_pass"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textOff="OFF"
            android:textOn="ON"
            app:switchTextAppearance="@style/BrandedSwitch.text"
            android:id="@+id/switch_pass" />

        <!--app:theme="@style/BrandedSwitch.control"!-->

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/h2"
        android:layout_below="@+id/pass"
        android:scaleType="fitXY"
        android:src="@drawable/adspro"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/h2"
        android:id="@+id/pass2"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password 2"
            android:layout_margin="10dp"
            android:textColor="@color/colorstatus2"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:id="@+id/text_pass2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary2"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:background="@drawable/et_password_bg5"
            android:layout_toRightOf="@+id/text_pass2"
            android:id="@+id/text_edit_pass2"
            android:text="SET"
            android:padding="10dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/switch_pass2"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textOff="OFF"
            android:textOn="ON"
            app:switchTextAppearance="@style/BrandedSwitch.text"
            android:id="@+id/switch_pass2" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:id="@+id/h3"
        android:layout_below="@+id/pass2"
        android:scaleType="fitXY"
        android:src="@drawable/adspro"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/h3"
        android:id="@+id/pass3"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fingerprint"
            android:layout_margin="10dp"
            android:textColor="@color/colorstatus2"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:id="@+id/text_pass3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary2"
            android:textSize="16sp"
            android:layout_margin="10dp"
            android:background="@drawable/et_password_bg5"
            android:layout_toRightOf="@+id/text_pass3"
            android:id="@+id/text_edit_pass3"
            android:text="SET"
            android:padding="10dp"
            android:gravity="center"
            android:layout_toLeftOf="@+id/switch_pass3"/>

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textOff="OFF"
            android:textOn="ON"
            app:switchTextAppearance="@style/BrandedSwitch.text"
            android:id="@+id/switch_pass3" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/h4"
        android:layout_below="@+id/pass3"
        android:scaleType="fitXY"
        android:src="@drawable/adspro"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/pass3"
        android:text="About"
        android:gravity="left|center_vertical"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary2"
        android:layout_marginLeft="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/h4"
        android:id="@+id/suport"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Support"
            android:layout_margin="10dp"
            android:textColor="@color/colorstatus2"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:id="@+id/text_suport"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/h5"
        android:layout_below="@+id/suport"
        android:scaleType="fitXY"
        android:src="@drawable/adspro"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/h5"
        android:id="@+id/About"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About US"
            android:layout_margin="10dp"
            android:textColor="@color/colorstatus2"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:id="@+id/text_About"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/h6"
        android:layout_below="@+id/About"
        android:scaleType="fitXY"
        android:src="@drawable/adspro"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/h6"
        android:id="@+id/removead"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove Ads"
            android:layout_margin="10dp"
            android:textColor="@color/colorstatus2"
            android:textSize="16sp"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:id="@+id/text_removead"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/h7"
        android:layout_below="@+id/removead"
        android:scaleType="fitXY"
        android:src="@drawable/adspro"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:layout_below="@+id/h7"
        android:text="COPY RIGHT FURY STUDIO 2017, V.1.2.0"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>